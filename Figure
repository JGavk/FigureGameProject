
package logic;

import java.awt.Dimension;
import java.awt.Graphics;
import java.awt.Image;
import javax.swing.ImageIcon;
import javax.swing.JLabel;


public abstract class Figure {
    protected String urlIMG, tamano;
    int ancho, largo;
    protected JLabel figureIMG;
    protected ImageIcon image;
    
        public Figure() {
            this.tamano=tamano;
            this.ancho=ancho;
            this.largo=largo;
            this.urlIMG=urlIMG;
        image = new ImageIcon(getClass().getResource(urlIMG));
        Image picture = image.getImage();
        picture = picture.getScaledInstance(ancho,largo,Image.SCALE_SMOOTH);
        image = new ImageIcon(picture);
        figureIMG = new JLabel(image);
        figureIMG.setPreferredSize(new Dimension(ancho, largo));
    }
        public abstract void draw(Graphics g, int x, int y);
 
}
        class Triangle extends Figure{
          public Triangle(String imageUrl, int width, int height) {
            super(imageUrl, width, height);
    }

    @Override
    public void draw(Graphics g, int x, int y) {
        g.drawImage(image.getImage(), x, y, null);
    }
}
